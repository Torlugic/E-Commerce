# Copy this file to supabase/.env.local and populate the values for local development.
# Never commit secrets. In production, store these values using `supabase secrets set`
# or your deployment platform's secret manager.

# Canada Tire OAuth Configuration
# IMPORTANT: BASE_URL and REALM must match the same environment (sandbox or production)
#
# Sandbox Environment:
#   BASE_URL contains "-sb1" in subdomain
#   REALM ends with "_SB1" suffix
#
# Production Environment:
#   BASE_URL has no "-sb1" in subdomain
#   REALM has no "_SB1" suffix
#
# Example values below are for SANDBOX. For production, remove "-sb1" from URL and "_SB1" from realm.

CANADA_TIRE_BASE_URL="https://8031691-sb1.restlets.api.netsuite.com/app/site/hosting"
CANADA_TIRE_REALM="8031691_SB1"
CANADA_TIRE_CONSUMER_KEY=""
CANADA_TIRE_CONSUMER_SECRET=""
CANADA_TIRE_TOKEN_ID=""
CANADA_TIRE_TOKEN_SECRET=""
CANADA_TIRE_CUSTOMER_ID=""
CANADA_TIRE_CUSTOMER_TOKEN=""
# Optional: override the default 30s timeout
CANADA_TIRE_TIMEOUT_MS="30000"

# Stripe payments
STRIPE_SECRET_KEY=""
# Optional: configure allowed payment methods (comma separated list of card, afterpay_clearpay, klarna, sezzle)
STRIPE_PAYMENT_METHOD_TYPES="card,afterpay_clearpay,klarna,sezzle"
